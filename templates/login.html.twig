{% extends "base.html.twig" %}

{% block header %}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>

		.login-container {
			max-width: 400px;
			margin-right: 0;
			margin-left: auto;
		}

		.btn,
		.btn-primary {
			width: 100%;
		}
	</style>
{% endblock %}

{% block body %}
	<!--Página de login y primera en aparecer al acceder al sitio web-->
	<div class="container">
		<div class="login-container mt-5">
			<h2>Inicio de Sesión</h2>
			{% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
			<form action="{{ path('app_login') }}" method="post">
				<div class="form-group">
					<label for="email">Correo Electrónico</label>
					<input type="email" id="email" name="_username" class="form-control" value="{{ last_username }}" required autofocus>
				</div>
				<div class="form-group">
					<label for="password">Contraseña</label>
					<input type="password" id="password" name="_password" class="form-control" required>
				</div>
				<button type="submit" class="btn btn-primary">Iniciar Sesión</button>
			</form>
			<div class="mt-3">
				<p style="text-align:center; margin-bottom:0px;">¿No tienes cuenta?</p>
				<a href="{{ path('app_registro') }}" class="btn btn-secondary">Registrarse</a>
			</div>
			<div class="mt-3">
				<p style="text-align:center;">También puedes
					<a href="{{ path('app_homepage')}}">entrar sin cuenta</a>
				</p>
			</div>
		</div>
	</div>

{% endblock %}
{% block footer %}
	{{ parent() }}
{% endblock %}
