{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Editar Perfil</h2>

                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.user, 'Nombre de usuario') }}
                    {{ form_widget(form.user, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.email, 'Correo Electrónico') }}
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                </div>
 
                <div class="form-group">
                    {{ form_label(form.password, 'Contraseña') }}
                    {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.fotoPerfil, 'Foto de Perfil') }}
                    {{ form_widget(form.fotoPerfil, { 'attr': {'class': 'form-control-file'} }) }}
                </div>


                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
